#!/bin/bash -e

export WERF_REPO="349430847202.dkr.ecr.ap-southeast-2.amazonaws.com/redguava/shipit"
export WERF_ENV="prod"
export WERF_ENABLE_PROCESS_EXTERMINATOR="1"

aws ecr get-login-password --region ap-southeast-2 | werf cr login --username AWS --password-stdin $WERF_REPO

werf converge

